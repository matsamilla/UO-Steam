  @pushlist 'ItemQuality' 'Indestructable/Invulnerability'
  @pushlist 'ItemQuality' 'Exceptional/Indestruct'
  @pushlist 'ItemQuality' 'Exceptional/Fortified'
endif
if not listexists 'ItemTypes'
  createlist 'ItemTypes'
  //Shields
